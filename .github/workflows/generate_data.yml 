cat > .github/workflows/generate_data.yml << 'EOF'
name: Generate Performance Data

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  generate:
    runs-on: ubuntu-latest
    
    permissions:
      contents: write
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
      
      - name: Install dependencies
        run: |
          pip install pandas numpy
      
      - name: Generate performance data
        run: |
          python3 generate_performance_data.py
      
      - name: Commit and push data
        run: |
          git config --global user.name 'GitHub Actions Bot'
          git config --global user.email 'actions@github.com'
          git add performance_summary.csv performance_data/
          git diff --quiet && git diff --staged --quiet || (git commit -m "ðŸ¤– Auto-generate performance data [skip ci]" && git push)
EOF

