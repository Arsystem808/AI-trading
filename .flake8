[flake8]
max-line-length = 120
ignore = E203,E266,E501,W503
per-file-ignores =
    core/strategy.py:E741,E731,F841
    services/snapshots.py:E501,E231,E302,E702
    utils/tickers.py:E501
    core/**/*.py:E501
exclude =
    .venv,
    __pycache__,
    .git,
    .github,
    models,
    data,
    pipelines,
    jobs,
    core/ui_confidence.py,
    scripts/prepare_and_train.py,
    scripts/quick_train_st.py,
    scripts/backtest.py
